                                        <label class="chd-color-combi">
                                            <div class="foo home8"></div>
                                            <input id="bgvar-4" name="bgcolorvar" type="radio" data-xmlid="theme_materialab.option_bg_preset_8" />
                                        </label>
                                        <label>
                                            Fixed Header
                                        </label>
                                    </td>
                                    <td>
                                        <label class="chd-color-combi">
                                            <div class="foo home9"></div>
                                            <input id="bgvar-4" name="bgcolorvar" type="radio" data-xmlid="theme_materialab.option_bg_preset_9" />
                                        </label>
                                        <label>
                                            Boxed View With Header Box
                                        </label>
                                    </td>
                                </tr>
                            </table>
                            <h5 class="modal-h5">FONTS COMBINATIONS</h5>
                            <table name="font">
                                <tr>
                                    <td width="50%">
                                        <label>
                                            <div>
                                                <span style="font-family:'Helvetica Neue', Helvetica, Arial, sans-serif; font-size:11px">Helvetica</span>
                                                <span style="font-family:Georgia, 'Times New Roman', Times, serif; font-size:11px">/ Georgia</span>
                                            </div>
                                            <input name="theme" type="radio" data-xmlid="" />
                                        </label>
                                    </td>
                                    <td width="50%">
                                        <label>
                                            <div>
                                                <span style="font-family:Georgia, 'Times New Roman', Times, serif; font-size:11px">Georgia</span>
                                                <span style="font-family:'Helvetica Neue', Helvetica, Arial, sans-serif; font-size:11px">/ Helvetica</span>
                                                <input name="theme" type="radio" data-xmlid="theme_default.option_font" />
                                            </div>
                                        </label>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
